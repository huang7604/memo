<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:id="@+id/delete_tag_list_view_image" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginLeft="15dp"
        android:textSize="15sp"
        android:layout_toRightOf="@id/delete_tag_list_view_image"
        android:layout_alignBaseline="@id/delete_tag_list_view_image"
        android:id="@+id/delete_tag_list_view_text"
        android:layout_marginTop="3dp"
        />

    <CheckBox
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:id="@+id/delete_tag_checkBox"
        android:button="@null"
        android:background="@drawable/check_box" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dip"
        android:background="#bebaba"
        android:layout_below="@id/delete_tag_list_view_image"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="53dp"
        android:layout_marginRight="15dp"/>

</RelativeLayout>