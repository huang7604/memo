<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentLeft="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/memo_list_view_content"
            android:textColor="#000000"
            android:textSize="15sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
           >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/memo_list_view_time"
                android:textColor="@color/list_view_menu"/>
            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:id="@+id/memo_list_view_daiban"
                android:src="@drawable/memo_daiban"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"/>
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:id="@+id/memo_list_view_alarm"
                android:src="@drawable/memo_alarm"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="35dp"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:id="@+id/memo_list_view_image"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dip"
        android:layout_alignParentBottom="true"
        android:background="#bebaba"
        android:layout_marginTop="0dp"/>
</RelativeLayout>