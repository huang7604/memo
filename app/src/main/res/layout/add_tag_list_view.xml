<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="0dp"

    android:paddingTop="10dp">

    <ImageView
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:background="@drawable/add_tag_list_view_image"
        android:id="@+id/add_tag_list_view_image" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginLeft="15dp"
        android:textSize="15sp"
        android:layout_toRightOf="@id/add_tag_list_view_image"
        android:layout_alignBaseline="@id/add_tag_list_view_image"
        android:id="@+id/add_tag_list_view_text"
        android:background="@null"
        android:layout_marginTop="3dp"
        android:textCursorDrawable="@drawable/edit_cursor"
        />

    <Button
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:id="@+id/add_tag_list_view_select" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dip"
        android:background="#bebaba"
        android:layout_below="@id/add_tag_list_view_image"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="53dp"
        android:layout_marginRight="50dp"/>
</RelativeLayout>